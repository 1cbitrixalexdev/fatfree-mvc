{% extends "template.twig" %}
{% block title %}{{ settings.site_name }} &mdash; Remove client{% endblock %}
{% block body %}
    <h1>Removing a client</h1>
    {% include "messages.twig" %}
    {% if clients %}
        <table id="clientsTable" class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Company</th>
                <th>Phone number</th>
                <th>Action</th>
            </tr>
            </thead>
            {% for client in clients %}
                <tr data-id="{{ client.id }}" data-name="{{ client.name }}">
                    <td>{{ client.id }}</td>
                    <td>{{ client.name }}</td>
                    <td>{{ client.company }}</td>
                    <td>+{{ client.phone }}</td>
                    <td><span class="remove">&times;</span></td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}
    {% include "usernav.twig" %}
    <div id="removeClientModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form id="removeClientForm" action="" method="post">
                    <input id="clientToRemove" name="client" type="hidden" value="0"/>
                    <div class="modal-header">
                        <h5 class="modal-title">Remove client</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Do you really want to delete this client from base?</p>
                        <s></s>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger">Yes</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block js %}
    {{ parent() }}
    <script src="{{ UI }}js/deleteClient.js"></script>
{% endblock %}