{% extends "template.twig" %}
{% block title %}{{ settings.site_name }} &mdash; Dashboard{% endblock %}
{% block body %}
    <h1>Admin page</h1>
    {% include "usernav.twig" %}
    <div class="row">
        <div class="col-md-6">
            <h2>Clients having orders</h2>

            <canvas id="clientsChart" width="400" height="400" class="d-none d-md-block"></canvas>

        </div>
        <div class="col-md-6">

        </div>
    </div>

{% endblock %}
{% block js %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0/dist/Chart.min.js"></script>
    <script>
        var ctx = document.getElementById('clientsChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: {{ clients|json_encode|raw }},
                datasets: [{
                    label: '# of clients',
                    data: {{ orders|json_encode|raw }},
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.4)',
                        'rgba(54, 162, 235, 0.4)',
                        'rgba(255, 159, 64, 0.4)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    yAxes: [{
                        ticks: {
                            beginAtZero: true
                        }
                    }]
                }
            }
        });
    </script>
{% endblock %}